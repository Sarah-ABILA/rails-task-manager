  <%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title %>
  </div>
  <% unless task.new_record? %>
      <div>
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, "Marquer comme terminée", class: "form-check-label" %>
      </div>
    <% end %>
  <div>
    <%= form.label :details, "Détails" %>
    <%= form.text_area :details %>
  </div>
  <%= form.submit " modifier la tache" %>
  <%= form.submit "Créer la tâche" %>
<% end %>

